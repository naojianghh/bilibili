<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/video_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/data1_video"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <VideoView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="true"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/videoTopController"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/video"
            android:orientation="horizontal"
            android:background="@drawable/gradient_transparent_start_form_top"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/top_controller"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <Button
                android:id="@+id/video_return"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@color/white_transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <Button
                android:id="@+id/video_goto_home"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@color/white_transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/video_return"
                app:layout_constraintTop_toTopOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/videoBottomController"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/video"
            android:orientation="horizontal"
            android:background="@drawable/gradient_transparent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/pause_or_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="148"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/start"/>

            <LinearLayout
                android:id="@+id/schedule"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="812"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/seek_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="540"
                    android:layout_gravity="center"
                    android:progressDrawable="@drawable/custom_seekbar"
                    android:thumb="@drawable/custom_cursor"
                    android:minHeight="1dp"
                    android:paddingTop="22dp"
                    android:paddingBottom="20dp"/>

                <TextView
                    android:id="@id/video_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="272"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:paddingTop="2dp"/>



            </LinearLayout>

            <ImageView
                android:id="@+id/full_screen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="300"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/full_screen"/>

        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recommend_video_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>